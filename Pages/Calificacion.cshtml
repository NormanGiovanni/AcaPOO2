@page
@model AcaFinal.Pages.CalificacionModel
@{
    ViewData["Title"] = "Clasificación de Calificaciones";
}

<style>
    .card-custom {
        border-radius: 1rem;
        box-shadow: 0 2px 8px rgba(60,72,100,0.08);
    }

    .btn-classify {
        background: #6366f1;
        color: #fff;
    }

    .btn-classify:hover {
        background: #4f46e5;
        color: #fff;
    }
</style>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card card-custom p-4">
                <h3 class="mb-4 text-center" style="color:#3730a3;">Clasificación de Calificaciones</h3>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label" for="Calificacion">Ingrese la calificación (0 a 5):</label>
                        <input asp-for="Calificacion" type="number" step="0.1" min="0" max="5" class="form-control" required />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-classify btn-lg">Clasificar</button>
                    </div>
                </form>
                @if (Model.Mensaje != null)
                {
                    <hr />
                    <div class="alert alert-info mt-3 text-center">
                        <strong>@Model.Mensaje</strong>
                    </div>
                }
            </div>
        </div>
    </div>
</div>